<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1D1919">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recipientMessageImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/male_image" />

    <TextView
        android:id="@+id/recipientMessageContent"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/recipientMessageImage"
        android:background="@drawable/recipient_message_layout"
        android:padding="11dp"
        android:text="test"
        android:textSize="15dp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/senderMessageContent"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/sender_message_layout"
        android:padding="11dp"
        android:text="test"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="italic|bold" />

</RelativeLayout>